{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "scenes/*": ["scenes/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": [ "src/**/*.ts", "global.d.ts", "global.d.ts" ],
  "exclude": [ "node_modules" ]
}