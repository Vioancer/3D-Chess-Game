{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "scenes/*": ["scenes/*"]
    }
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}